pipeline {
    agent none

    stages {
        stage('Temporary Folder') {
            agent any
            steps {
                sh 'rm  -rf tmp'
                sh 'mkdir -p tmp'
                sh 'cd tmp && git clone https://github.com/idm-suedtirol/bdp-core.git'
            }
        }
        stage('Dependencies') {
            agent {
                dockerfile {
                    filename 'dockerfile'
                }
            }
            steps {
                sh 'cd tmp/bdp-core/dto && mvn install'
                sh 'cd tmp/bdp-core/dc-interface && mvn install'
            }
        }
        stage('Test') {
            agent {
                dockerfile {
                    filename 'dockerfile'
                }
            }
            steps {
                sh 'cd data-collectors/emobility-hydrogen && mvn clean compile'
            }
        }
    }
}
