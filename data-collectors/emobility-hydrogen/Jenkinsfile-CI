pipeline {
    agent {
        dockerfile {
            filename 'dockerfile'
            args '-v $PWD/tmp/.m2:/root/.m2'
        }
    }

    stages {
        stage('Temporary Folder') {
            steps {
                sh 'rm  -rf tmp && mkdir -p tmp'
                sh 'cd tmp && git clone https://github.com/idm-suedtirol/bdp-core.git'
            }
        }
        stage('Dependencies') {
            steps {
                sh 'cd tmp/bdp-core/dto && mvn -X install'
                sh 'cd tmp/bdp-core/dc-interface && mvn install'
            }
        }
        stage('Test') {
            steps {
                sh 'data-collectors/emobility-hydrogen && mvn clean compile'
            }
        }
    }
}
